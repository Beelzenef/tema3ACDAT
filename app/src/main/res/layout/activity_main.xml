<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_empleadosXML"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="onClick_lanzarExs"
        android:text="@string/btn_empleadosXML" />

    <Button
        android:id="@+id/btn_Bizi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="onClick_lanzarExs"
        android:text="@string/btn_Bizi" />

    <Button
        android:id="@+id/btn_MalagaMeteo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="onClick_lanzarExs"
        android:text="@string/btn_MalagaMeteo" />

    <Button
        android:id="@+id/btn_lectorRSS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="onClick_lanzarExs"
        android:text="@string/btn_lectorRSS" />
</LinearLayout>